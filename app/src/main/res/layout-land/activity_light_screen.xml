<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkblue"
    android:clickable="true"
    android:focusableInTouchMode="true"
    tools:context=".LightScreen">


    <TextView
        android:id="@+id/light_for_ID"
        android:layout_width="157dp"
        android:layout_height="37dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="124dp"
        android:fontFamily="@font/bungee2"
        android:text="@string/light_for"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toEndOf="@+id/colorwheel_ID"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <ImageButton
        android:id="@+id/button_chaircolor_ID"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@drawable/statelist"
        android:contentDescription="@string/chair_color"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_action_seat"
        app:layout_constraintEnd_toEndOf="@+id/light_for_ID"
        app:layout_constraintStart_toStartOf="@+id/light_for_ID"
        app:layout_constraintTop_toBottomOf="@+id/light_for_ID" />

    <ImageButton
        android:id="@+id/button_roomcolor_ID"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@drawable/statelist"
        android:contentDescription="@string/room_color"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:scaleY="1"
        android:src="@drawable/interior_light_icon"
        app:layout_constraintEnd_toEndOf="@+id/button_chaircolor_ID"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/button_chaircolor_ID"
        app:layout_constraintTop_toBottomOf="@+id/button_chaircolor_ID" />

    <ImageButton
        android:id="@+id/stopChair_lightScreen_ID2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/stop_button"
        android:contentDescription="@string/stopchair"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_B_ID" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="56dp"

        android:background="@color/snoozeBlau"
        android:backgroundTint="#000000"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/seatImageView__LightScreen_ID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/chair"
            app:srcCompat="@drawable/seat_icon_white" />

        <ImageView
            android:id="@+id/lightImageView_LightScreen_ID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/light"
            app:srcCompat="@drawable/light_icon_white" />

        <ImageView
            android:id="@+id/musicImageView_LightScreen_ID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/music"
            app:srcCompat="@drawable/music_icon_white" />
    </LinearLayout>


    <Button
        android:id="@+id/saveAsFavoriteColor_ID"
        android:layout_width="90dp"
        android:layout_height="38dp"
        android:layout_marginTop="28dp"

        android:background="@drawable/rounded_corners"
        android:text="@string/save_as_favorite"
        android:textColor="#000000"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="@+id/hex"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/hex"
        app:layout_constraintTop_toBottomOf="@+id/hex" />

    <Button
        android:id="@+id/showFavoriteButton_ID"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/orangeRed"
        android:text="@string/show_favorite"
        android:textColor="#000000"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/saveAsFavoriteColor_ID"
        app:layout_constraintStart_toEndOf="@+id/saveAsFavoriteColor_ID"
        app:layout_constraintTop_toBottomOf="@+id/hex"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_end="154dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="640dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="162dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="62dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="206dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="1064dp" />

    <TextView
        android:id="@+id/colorShowView_ID"
        android:layout_width="181dp"
        android:layout_height="47dp"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/bungee2"
        android:text="@string/color_code"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.822"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pickfromcolorwheel"
        android:layout_width="301dp"
        android:layout_height="46dp"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/bungee2"
        android:text="@string/pick_from_colorwheel"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.176"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="222dp"
        android:layout_height="11dp"
        android:layout_marginTop="104dp"
        android:max="255"
        android:min="0"
        android:progressDrawable="@drawable/blacktowhite"
        android:rotation="-90"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pickfromcolorwheel" />

    <ImageView
        android:id="@+id/colorwheel_ID"
        android:layout_width="266dp"
        android:layout_height="238dp"
        android:contentDescription="@string/colorwheel"
        android:src="@drawable/colorwheel"
        app:layout_constraintEnd_toEndOf="@+id/pickfromcolorwheel"
        app:layout_constraintStart_toStartOf="@+id/pickfromcolorwheel"
        app:layout_constraintTop_toBottomOf="@+id/pickfromcolorwheel" />

    <View
        android:id="@+id/ausgabe"
        android:layout_width="218dp"
        android:layout_height="29dp"
        android:layout_marginTop="12dp"
        android:background="@color/snoozeBlau"
        app:layout_constraintEnd_toEndOf="@+id/colorwheel_ID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/colorwheel_ID"
        app:layout_constraintTop_toBottomOf="@+id/colorwheel_ID" />

    <TextView
        android:id="@+id/hex"
        android:layout_width="118dp"
        android:layout_height="23dp"
        android:text="@string/hex"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/ausgabe"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ausgabe"
        app:layout_constraintTop_toBottomOf="@+id/ausgabe" />

    <EditText
        android:id="@+id/editText_B_ID"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/nr2"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:inputType="number"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/blue"
        app:layout_constraintStart_toEndOf="@+id/blue"
        app:layout_constraintTop_toTopOf="@+id/blue" />

    <EditText
        android:id="@+id/editText_G_ID"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="48dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/nr2"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:inputType="number"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/editText_B_ID"
        app:layout_constraintEnd_toEndOf="@+id/editText_B_ID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editText_B_ID" />

    <EditText
        android:id="@+id/editText_R_ID"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/nr1"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:inputType="number"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/editText_G_ID"
        app:layout_constraintEnd_toEndOf="@+id/editText_G_ID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editText_G_ID" />

    <TextView
        android:id="@+id/yellow"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:background="@drawable/radiusgreen"
        android:foregroundGravity="center"
        android:gravity="center_horizontal"
        android:text="@string/G"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/red"
        app:layout_constraintStart_toStartOf="@+id/guideline11"
        app:layout_constraintTop_toBottomOf="@+id/red"
        tools:text="G" />

    <TextView
        android:id="@+id/red"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/radiusred"
        android:foregroundGravity="center"
        android:text="@string/R"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/colorShowView_ID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline11"
        app:layout_constraintTop_toBottomOf="@+id/colorShowView_ID"
        tools:text="R" />

    <TextView
        android:id="@+id/blue"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:background="@drawable/radiusblue"
        android:gravity="center"
        android:isScrollContainer="false"
        android:text="@string/B"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/yellow"
        app:layout_constraintStart_toStartOf="@+id/guideline11"
        app:layout_constraintTop_toBottomOf="@+id/yellow"
        tools:text="B" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="90dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="931dp" />


</androidx.constraintlayout.widget.ConstraintLayout>