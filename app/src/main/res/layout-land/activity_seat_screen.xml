        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_end="112dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="54dp" />

    <ImageButton
        android:id="@+id/stopChair_seatScreen_ID"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="848dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/stop_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="56dp"

        android:background="@color/snoozeBlau"
        android:backgroundTint="#000000"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/seatImageView_ID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            app:srcCompat="@drawable/seat_icon_white" />

        <ImageView
            android:id="@+id/lightImageView_ID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/light_icon_white" />

        <ImageView
            android:id="@+id/musicImageView_ID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/music_icon_white" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBarMiddle_ID"
        android:layout_width="314dp"
        android:layout_height="49dp"
        android:layout_marginTop="28dp"

        android:max="30"
        android:progressDrawable="@drawable/custom_seekbar"
        android:thumb="@drawable/custom_thumb"
        app:layout_constraintEnd_toEndOf="@+id/seekBarTop_ID"
        app:layout_constraintStart_toStartOf="@+id/seekBarTop_ID"
        app:layout_constraintTop_toBottomOf="@+id/seekBarTop_ID"
        tools:layout_conversion_absoluteHeight="96dp"
        tools:layout_conversion_absoluteWidth="262dp" />

    <SeekBar
        android:id="@+id/seekBarTop_ID"
        android:layout_width="314dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:foregroundGravity="center"
        android:max="80"
        android:progressDrawable="@drawable/custom_seekbar"
        android:thumb="@drawable/custom_thumb"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintHorizontal_bias="0.385"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:layout_conversion_absoluteHeight="110dp"
        tools:layout_conversion_absoluteWidth="262dp" />

    <ImageButton
        android:id="@+id/sittingPos_ID"
        android:layout_width="75dp"
        android:layout_height="75dp"
