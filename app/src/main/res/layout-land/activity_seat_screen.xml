        tools:layout_editor_absoluteY="758dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="89dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/LyingPose"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="446dp" />

    <SeekBar
        android:id="@+id/seekBarDown_ID"
        android:layout_width="314dp"
        android:layout_height="40dp"
        android:layout_marginTop="36dp"
        android:max="89"
        android:progressDrawable="@drawable/custom_seekbar"
        android:thumb="@drawable/custom_thumb"
        app:layout_constraintEnd_toEndOf="@+id/seekBarMiddle_ID"
        app:layout_constraintStart_toStartOf="@+id/seekBarMiddle_ID"
        app:layout_constraintTop_toBottomOf="@+id/seekBarMiddle_ID"
        tools:layout_conversion_absoluteHeight="108dp"
        tools:layout_conversion_absoluteWidth="262dp" />

    <ImageButton
        android:id="@+id/favPos_ID"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@drawable/statelist"
        android:padding="18dp"
        android:scaleType="fitCenter"
        android:src="@drawable/herz_icon_transparent"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="174dp" />

    <ImageButton
        android:id="@+id/zeroGPos_ID"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@drawable/statelist"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/zerog_icon_transparent"
        tools:layout_editor_absoluteX="338dp"
        tools:layout_editor_absoluteY="758dp" />

    <ImageButton
        android:id="@+id/lyingPos_ID"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@drawable/statelist"
        android:padding="7dp"
        android:scaleType="fitCenter"
        android:src="@drawable/lying_icon_transparent"
        tools:layout_editor_absoluteX="338dp"
        tools:layout_editor_absoluteY="645dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="87dp"
        android:layout_height="43dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/FavPos"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="513dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="108dp"
        android:layout_height="38dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/ZeroGravityPos"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="392dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="85dp"
        android:layout_height="41dp"
        android:layout_weight="1"
        android:gravity="center_horizontal|fill_vertical"
        android:text="@string/SittingPos"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="316dp" />

    <TextView
        android:id="@+id/seekBarViewInfo_Down_ID"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="32dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/backrestInt"
        app:layout_constraintBottom_toBottomOf="@+id/seekBarDown_ID"
        app:layout_constraintEnd_toStartOf="@+id/seekBarDown_ID"
        app:layout_constraintTop_toTopOf="@+id/seekBarDown_ID"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/seekBarViewInfo_Mid_ID"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="36dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/backrestInt"
        app:layout_constraintBottom_toTopOf="@+id/seekBarViewInfo_Down_ID"
        app:layout_constraintEnd_toEndOf="@+id/seekBarViewInfo_Down_ID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/seekBarViewInfo_Down_ID" />

    <TextView
        android:id="@+id/seekBarViewInfo_Top_ID"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="28dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/backrestInt"
        app:layout_constraintBottom_toTopOf="@+id/seekBarViewInfo_Mid_ID"
        app:layout_constraintEnd_toEndOf="@+id/seekBarViewInfo_Mid_ID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/seekBarViewInfo_Mid_ID" />

</androidx.constraintlayout.widget.ConstraintLayout>