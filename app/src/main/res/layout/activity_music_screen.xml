<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkblue"
    tools:context=".MusicScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/snoozeBlau"

        android:backgroundTint="#000000"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/seatImageView__MusicScreen_ID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/seat_icon_white" />

        <ImageView
            android:id="@+id/lightImageView_MusicScreen_ID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/light_icon_white" />

        <ImageView
            android:id="@+id/musicImageView_MusicScreen_ID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/music_icon_white" />
    </LinearLayout>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="180dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_begin="1060dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginStart="250dp"
        android:fontFamily="@font/bungee2"
        android:gravity="center"
        android:text="@string/picktheme"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginEnd="250dp"
        android:fontFamily="@font/bungee2"
        android:gravity="center"
        android:text="@string/ownmusic"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/playbutton"
        android:layout_width="117dp"
        android:layout_height="50dp"
        android:layout_marginStart="372dp"
        android:layout_marginTop="576dp"
        android:background="@drawable/red_rounded_corners"
        android:text="@string/play_favorite"
        android:textColor="#0B0A0A"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/savebutton"
        android:layout_width="117dp"
        android:layout_height="50dp"
        android:layout_marginTop="576dp"
        android:background="@drawable/rounded_corners"
        android:text="@string/save_as_favorite"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="300dp"
        android:layout_height="200dp"

        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toTopOf="@+id/guideline6">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginEnd="12dp"
            app:columnCount="3"
            app:layout_constraintBottom_toTopOf="@+id/guideline7"
            app:layout_constraintEnd_toStartOf="@+id/guideline9"
            app:orientation="vertical"
            app:rowCount="2">

            <ImageButton
                android:id="@+id/wald_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/wald"
                android:contentDescription="@string/wald" />

            <ImageButton
                android:id="@+id/berg_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/berg"
                android:contentDescription="@string/berge" />

            <ImageButton
                android:id="@+id/regen_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/regen"
                android:contentDescription="@string/regen" />

            <ImageButton
                android:id="@+id/lagerfeuer_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/lagerfeuer"
                android:contentDescription="@string/lagerfeuer" />

            <ImageButton
                android:id="@+id/dschungel_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/dschungel"
                android:contentDescription="@string/dschungel" />


            <ImageButton
                android:id="@+id/strand_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/strand"
                android:contentDescription="@string/strand" />

        </androidx.gridlayout.widget.GridLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="312dp"
        android:layout_height="119dp"
        android:layout_marginBottom="248dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline9">

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#006e8c"
            android:contentDescription="@string/bluetooth"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/bluetooth" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#006e8c"
            android:contentDescription="@string/musiclibrary"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/musiclibrary" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#006e8c"
            android:contentDescription="@string/spotify"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/spotify" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="385dp"
        android:layout_height="96dp"
        android:layout_marginTop="204dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/guideline9"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:backgroundTint="#006e8c"
            android:contentDescription="@string/playbutton"
            android:scaleType="fitCenter"
            app:srcCompat="@android:drawable/ic_media_play" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="297dp"
            android:layout_height="70dp" />
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="135dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="121dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="140dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_begin="671dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.16"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/stopChair_seatScreen_ID"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="536dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/stop_button"
        android:contentDescription="@string/stopchair"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="57dp" />

    <TextView
        android:id="@+id/textViewtheme"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="440dp"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>