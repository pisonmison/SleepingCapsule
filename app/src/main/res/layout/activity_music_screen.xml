<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkblue"
    tools:context=".MusicScreen">

    <Button
        android:id="@+id/button_save_favorite"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="192dp"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="60dp"
        android:background="#4DD7FA"
        android:text="@string/save_favorite_button"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.633" />

    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="196dp"
        android:layout_marginBottom="60dp"
        android:background="#E80F0F"
        android:text="@string/play_favorite_button"
        android:textColor="#F6F0F0"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.633" />


    <ImageButton
        android:id="@+id/berg_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/berg"
        app:layout_constraintEnd_toStartOf="@+id/dschungel_button"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/dschungel_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/dschungel"
        app:layout_constraintBottom_toTopOf="@+id/strand_button"
        app:layout_constraintEnd_toStartOf="@+id/lagerfeuer_button"
        app:layout_constraintStart_toEndOf="@+id/berg_button"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/lagerfeuer_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/lagerfeuer"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="350dp" />

    <ImageButton
        android:id="@+id/regen_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/regen"
        app:layout_constraintEnd_toStartOf="@+id/strand_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/berg_button" />

    <ImageButton
        android:id="@+id/strand_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/strand"
        app:layout_constraintEnd_toStartOf="@+id/wald_button"
        app:layout_constraintStart_toEndOf="@+id/regen_button"
        app:layout_constraintTop_toBottomOf="@+id/dschungel_button" />

    <ImageButton
        android:id="@+id/wald_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/wald"
        app:layout_constraintTop_toBottomOf="@+id/lagerfeuer_button"
        tools:layout_editor_absoluteX="350dp" />

    <ScrollView
        android:layout_width="295dp"
        android:layout_height="140dp"
        android:layout_marginStart="572dp"
        android:layout_marginTop="84dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />


    </ScrollView>

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#006e8c"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/imageButton3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bluetooth" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#006e8c"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/imageButton4"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/spotify" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="60dp"
        android:backgroundTint="#006e8c"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/musiclibrary" />

</androidx.constraintlayout.widget.ConstraintLayout>