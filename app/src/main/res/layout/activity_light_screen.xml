<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkblue"
    android:clickable="true"
    android:focusableInTouchMode="true"
    tools:context=".LightScreen">


    <ImageButton
        android:id="@+id/button_roomcolor_ID"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="436dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@drawable/statelist"
        android:contentDescription="@string/room_color"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:scaleY="1"
        android:src="@drawable/interior_light_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/stopChair_lightScreen_ID2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="788dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/stop_button"
        android:contentDescription="@string/stopchair"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/snoozeBlau"

        android:backgroundTint="#000000"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/seatImageView__LightScreen_ID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/chair"
            app:srcCompat="@drawable/seat_icon_white" />

        <ImageView
            android:id="@+id/lightImageView_LightScreen_ID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/light"
            app:srcCompat="@drawable/light_icon_white" />

        <ImageView
            android:id="@+id/musicImageView_LightScreen_ID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/music"
            app:srcCompat="@drawable/music_icon_white" />
    </LinearLayout>


    <Button
        android:id="@+id/saveAsFavoriteColor_ID"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="64dp"

        android:background="@drawable/rounded_corners"
        android:text="@string/save_as_favorite"
        android:textColor="#000000"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="@+id/hex"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/hex"
        app:layout_constraintTop_toBottomOf="@+id/hex" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_end="80dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="583dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="120dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_chaircolor_ID"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="296dp"
        android:layout_marginEnd="436dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@drawable/statelist"
        android:contentDescription="@string/chair_color"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_action_seat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/showFavoriteButton_ID"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/orangeRed"
        android:text="@string/show_favorite"
        android:textColor="#000000"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="@+id/saveAsFavoriteColor_ID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/saveAsFavoriteColor_ID"
        app:layout_constraintTop_toBottomOf="@+id/saveAsFavoriteColor_ID" />

    <ImageView
        android:id="@+id/colorwheel_ID"
        android:layout_width="215dp"
        android:layout_height="204dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/colorwheel"
        android:src="@drawable/colorwheel"
        app:layout_constraintEnd_toStartOf="@+id/guideline11"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="@+id/pickfromcolorwheel"
        app:layout_constraintTop_toTopOf="@+id/guideline12" />

    <TextView
        android:id="@+id/light_for_ID"
        android:layout_width="217dp"
        android:layout_height="38dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="356dp"
        android:fontFamily="@font/bungee2"
        android:text="@string/light_for"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_B_ID"
        android:layout_width="60dp"
        android:layout_height="49dp"
        android:layout_marginBottom="48dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/nr2"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:inputType="number"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/editText_G_ID"
        app:layout_constraintEnd_toEndOf="@+id/editText_G_ID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editText_G_ID" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="62dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="260dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="1064dp" />

    <TextView
        android:id="@+id/colorShowView_ID"
        android:layout_width="181dp"
        android:layout_height="47dp"
        android:layout_marginTop="440dp"
        android:fontFamily="@font/bungee2"
        android:text="@string/color_code"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pickfromcolorwheel"
        android:layout_width="301dp"
        android:layout_height="46dp"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/bungee2"
        android:text="@string/pick_from_colorwheel"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.946"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="248dp"
        android:layout_height="0dp"
        android:layout_marginStart="324dp"
        android:layout_marginTop="384dp"
        android:max="255"
        android:min="0"
        android:progressDrawable="@drawable/blacktowhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_G_ID"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginBottom="60dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/nr2"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:inputType="number"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/editText_R_ID"
        app:layout_constraintEnd_toEndOf="@+id/editText_R_ID"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/editText_R_ID" />

    <EditText
        android:id="@+id/editText_R_ID"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/nr1"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:inputType="number"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/blue"
        app:layout_constraintStart_toEndOf="@+id/blue"
        app:layout_constraintTop_toTopOf="@+id/blue"
        app:layout_constraintVertical_bias="0.52" />

    <TextView
        android:id="@+id/blue"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:background="@drawable/radiusblue"
        android:gravity="center"
        android:isScrollContainer="false"
        android:text="@string/B"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/yellow"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/yellow"
        app:layout_constraintTop_toBottomOf="@+id/yellow"
        tools:text="B" />

    <TextView
        android:id="@+id/yellow"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:background="@drawable/radiusgreen"
        android:foregroundGravity="center"
        android:gravity="center_horizontal"
        android:text="@string/G"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/red"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/red"
        app:layout_constraintTop_toBottomOf="@+id/red"
        tools:text="G" />

    <TextView
        android:id="@+id/red"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginStart="88dp"
        android:layout_marginTop="392dp"
        android:background="@drawable/radiusred"
        android:foregroundGravity="center"
        android:text="@string/R"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline12"
        tools:text="R" />

    <TextView
        android:id="@+id/hex"
        android:layout_width="154dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:text="@string/hex"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/ausgabe"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ausgabe"
        app:layout_constraintTop_toBottomOf="@+id/ausgabe" />

    <View
        android:id="@+id/ausgabe"
        android:layout_width="174dp"
        android:layout_height="30dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/rounded_corners"
        app:layout_constraintEnd_toEndOf="@+id/colorwheel_ID"
        app:layout_constraintHorizontal_bias="0.195"
        app:layout_constraintStart_toStartOf="@+id/colorwheel_ID"
        app:layout_constraintTop_toBottomOf="@+id/colorwheel_ID" />


</androidx.constraintlayout.widget.ConstraintLayout>