<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:background="@color/darkblue"
    tools:context=".LightScreen">


    <ImageButton
        android:id="@+id/button_chaircolor_ID"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="568dp"
        android:layout_marginEnd="428dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@drawable/statelist"
        android:contentDescription="@string/chair_color"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_action_seat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_roomcolor_ID"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="568dp"
        android:layout_marginEnd="336dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@drawable/statelist"
        android:contentDescription="@string/room_color"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:scaleY="1"
        android:src="@drawable/interior_light_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/light_for_ID"
        android:layout_width="217dp"
        android:layout_height="38dp"
        android:layout_marginTop="512dp"
        android:layout_marginEnd="304dp"
        android:fontFamily="@font/bungee2"
        android:text="@string/light_for"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/stopChair_lightScreen_ID2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="536dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/stop_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/stopchair" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/snoozeBlau"

        android:backgroundTint="#000000"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/seatImageView__LightScreen_ID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/chair"
            app:srcCompat="@drawable/seat_icon_white" />

        <ImageView
            android:id="@+id/lightImageView_LightScreen_ID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/light"
            app:srcCompat="@drawable/light_icon_white" />

        <ImageView
            android:id="@+id/musicImageView_LightScreen_ID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/music"
            app:srcCompat="@drawable/music_icon_white" />
    </LinearLayout>


    <Button
        android:id="@+id/saveAsFavoriteColor_ID"
        android:layout_width="117dp"
        android:layout_height="50dp"
        android:layout_marginStart="272dp"
        android:layout_marginTop="580dp"
        android:background="@drawable/rounded_corners"

        android:text="@string/save_as_favorite"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/showFavoriteButton_ID"
        android:layout_width="117dp"
        android:layout_height="50dp"
        android:layout_marginStart="428dp"
        android:layout_marginTop="580dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/orangeRed"
        android:text="@string/show_favorite"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="156dp"
        android:layout_height="260dp"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="272dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editText_R_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="55dp"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/nr1"
            android:inputType="number"
            android:textColor="#FFFFFF"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/editText_G_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/nr2"
            android:inputType="number"
            android:textColor="#FFFFFF"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/editText_B_ID"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="20dp"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/nr2"
            android:inputType="number"
            android:textColor="#FFFFFF"
            android:importantForAutofill="no" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="78dp"
        android:layout_height="314dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="452dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/red"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:autoText="false"
            android:background="@drawable/radiusred"
            android:foregroundGravity="center"
            android:text="@string/R"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="50sp"
            android:textStyle="bold"
            tools:text="R" />

        <TextView
            android:id="@+id/yellow"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:background="@drawable/radiusgreen"
            android:foregroundGravity="center"
            android:gravity="center_horizontal"
            android:text="@string/G"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="50sp"
            android:textStyle="bold"
            tools:text="G" />

        <TextView
            android:id="@+id/blue"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:background="@drawable/radiusblue"
            android:gravity="center"
            android:isScrollContainer="false"
            android:text="@string/B"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="50sp"
            android:textStyle="bold"
            tools:text="B" />
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_end="154dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="640dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="120dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="62dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="206dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="1064dp" />

    <LinearLayout
        android:layout_width="305dp"
        android:layout_height="452dp"
        android:layout_marginStart="256dp"
        android:layout_marginTop="124dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/colorwheel"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:contentDescription="@string/colorwheel"
            android:src="@drawable/colorwheel2" />

        <View
            android:id="@+id/ausgabe"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:background="@color/snoozeBlau"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/hex"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:text="@string/hex"
            android:textSize="24sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/colorShowView_ID"
        android:layout_width="181dp"
        android:layout_height="47dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="328dp"
        android:fontFamily="@font/bungee2"
        android:text="@string/color_code"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pickfromcolorwheel"
        android:layout_width="301dp"
        android:layout_height="46dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/bungee2"
        android:text="@string/pick_from_colorwheel"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>